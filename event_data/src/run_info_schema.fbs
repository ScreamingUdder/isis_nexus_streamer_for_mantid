// schema for ISIS data streaming test

namespace ISISDAE;

// this will be used in a separate kafka topic, used to pick up where current run starts
// if you join late 
table RunInfo {
    start_time : ulong;
	run_number : int;
	inst_name : string;
	stream_offset : ulong;   // offset into kafka topic for start of current data collection run
}

root_type RunInfo;
